// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// ============ USER MANAGEMENT ============
model User {
  id            String    @id @default(cuid())
  name          String
  email         String    @unique
  password      String?    // Optional for Magic Link / OAuth
  image         String?
  role          String    @default("STUDENT") // "STUDENT", "ADMIN", "FACULTY"
  
  // Profile & Progress
  studentId     String?   // e.g. "C191001"
  bio           String?
  currentSemester Int?    @default(1)
  currentYear   Int?      @default(1)
  department    String?   // e.g. "Computer Science"
  
  // Relations
  bookmarks     UserBookmark[]
  activities    UserActivity[]
  readingProgress ReadingProgress[]
  uploadedResources Resource[] @relation("ResourceUploader")
  approvedResources Resource[] @relation("ResourceApprover")
  
  // Forum
  forumPosts    ForumDiscussion[] @relation("ForumPosts")
  forumReplies  ForumReply[]      @relation("ForumReplies")
  resolvedDiscussions ForumDiscussion[] @relation("ForumResolver")
  helpfulDiscussions ForumDiscussion[] @relation("DiscussionHelpful")
  helpfulReplies ForumReply[] @relation("ReplyHelpful")

  // Academic
  grades        StudentGrade[]
  progress      GradesProgress?
  labSubmissions LabSubmission[] @relation("LabSubmissions")
  peerReviews   PeerReview[]
  projects      Project[]
  
  // Community
  createdGroups StudyGroup[] @relation("GroupCreator")
  groups        StudyGroup[] @relation("GroupMembers")
  sharedNotes   SharedNote[]
  badges        AchievementBadge[] @relation("AchievementBadges")
  analytics     UserAnalytics?
  
  // Reviews & Flags
  resourceReviews ResourceReview[]
  reportedFlags   ResourceFlag[]

  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
}

// ============ CURRICULUM MANAGEMENT ============
model Course {
  id          String    @id @default(cuid())
  courseCode  String    @unique // e.g., "CSE 1101"
  courseTitle String
  credits     Float     
  contactHours Float?
  semester    Int       // 1-8
  year        Int       // 1-4
  department  String    @default("CSE") 
  isTheory    Boolean   @default(true)
  isSessional Boolean   @default(false)
  description String?   
  learningOutcomes String? 
  instructor  String?
  
  // Relations
  preRequisites   Course[] @relation("CoursePrerequisites")
  prerequisiteOf  Course[] @relation("CoursePrerequisites")
  
  specialization  SpecializationTrack[] @relation("TrackCourses")
  electiveFor     SpecializationTrack[] @relation("TrackElectives")
  
  resources       Resource[]
  discussions     ForumDiscussion[]
  projects        Project[]
  grades          StudentGrade[]
  labSubmissions  LabSubmission[]
  studyGroups     StudyGroup[]

  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model SpecializationTrack {
  id          String    @id @default(cuid())
  name        String    
  description String?   
  year        Int       
  
  requiredCourses Course[] @relation("TrackCourses")
  electiveOptions Course[] @relation("TrackElectives")
  
  skillBadges String?   
  projects    Project[]
  
  createdAt   DateTime @default(now())
}

// ============ RESOURCE MANAGEMENT ============
model Resource {
  id          String      @id @default(cuid())
  title       String
  description String?     
  
  course      Course      @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId    String
  
  resourceType String     
  fileUrl     String
  externalUrl String?
  
  year        Int?        // For Past Papers or publication year
  
  difficulty  String      @default("INTERMEDIATE") 
  topics      String?     
  
  uploadedBy  User        @relation("ResourceUploader", fields: [uploadedById], references: [id])
  uploadedById String
  
  uploadedAt  DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  
  rating      Float       @default(0) 
  ratingCount Int         @default(0)
  downloadCount Int       @default(0)
  
  isApproved  Boolean     @default(false)
  approvedBy  User?       @relation("ResourceApprover", fields: [approvedById], references: [id])
  approvedById String?
  
  // Past Paper Specifics
  isPastPaper Boolean     @default(false)
  examYear    Int?
  examSemester Int?       
  hasSolution Boolean     @default(false)
  solutionUrl String?

  // Relations
  bookmarkedBy UserBookmark[]
  reviews      ResourceReview[]
  flags        ResourceFlag[]
  activities   UserActivity[]
  readingProgress ReadingProgress[]
  resourceRating ResourceRating?
}

model UserBookmark {
  id         String   @id @default(cuid())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
  resource   Resource @relation(fields: [resourceId], references: [id], onDelete: Cascade)
  resourceId String
  bookmarkedAt DateTime @default(now())
  collection String? 

  @@unique([userId, resourceId])
}

model ResourceReview {
  id         String   @id @default(cuid())
  resource   Resource @relation(fields: [resourceId], references: [id], onDelete: Cascade)
  resourceId String
  reviewer   User     @relation(fields: [reviewerId], references: [id])
  reviewerId String
  rating     Int      
  comment    String?  
  helpful    Boolean?
  isApproved Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt 
}

model ResourceRating {
  id            String   @id @default(cuid())
  resourceId    String   @unique
  averageRating Float    @default(0)
  totalRatings  Int      @default(0)
  totalReviews  Int      @default(0)
  updatedAt     DateTime @updatedAt
  
  resource      Resource @relation(fields: [resourceId], references: [id], onDelete: Cascade)
}

model ResourceFlag {
  id         String   @id @default(cuid())
  resource   Resource @relation(fields: [resourceId], references: [id], onDelete: Cascade)
  resourceId String
  reporter   User     @relation(fields: [reporterId], references: [id])
  reporterId String
  reason     String   
  description String? 
  status     String   @default("PENDING") 
  createdAt  DateTime @default(now())
}

// ============ COMMUNITY & DISCUSSION ============
model ForumDiscussion {
  id          String    @id @default(cuid())
  course      Course    @relation(fields: [courseId], references: [id], onDelete: Cascade)
  courseId    String
  title       String
  content     String    
  author      User      @relation("ForumPosts", fields: [authorId], references: [id])
  authorId    String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  replies     ForumReply[]
  
  isResolved  Boolean   @default(false)
  resolvedBy  User?     @relation("ForumResolver", fields: [resolvedById], references: [id])
  resolvedById String?
  
  tags        String?   
  helpful     User[]    @relation("DiscussionHelpful")
  views       Int       @default(0)
}

model ForumReply {
  id          String          @id @default(cuid())
  discussion  ForumDiscussion @relation(fields: [discussionId], references: [id], onDelete: Cascade)
  discussionId String
  content     String          
  author      User            @relation("ForumReplies", fields: [authorId], references: [id])
  authorId    String
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  
  helpful     User[]          @relation("ReplyHelpful")
  isMarkedSolution Boolean    @default(false)
}

// ============ ASSESSMENT & PERFORMANCE ============
model StudentGrade {
  id          String   @id @default(cuid())
  student     User     @relation(fields: [studentId], references: [id], onDelete: Cascade)
  studentId   String
  course      Course   @relation(fields: [courseId], references: [id])
  courseId    String
  grade       String   
  gradePoint  Float
  semester    Int
  year        Int
  recordedAt  DateTime @default(now())

  @@unique([studentId, courseId, semester, year])
}

model GradesProgress {
  id              String   @id @default(cuid())
  student         User     @relation(fields: [studentId], references: [id], onDelete: Cascade)
  studentId       String   @unique
  currentGPA      Float
  cumulativeGPA   Float
  creditsEarned   Float    
  creditsAttempted Float   
  semesterGPA     Float
  academicStanding String 
  lastUpdated     DateTime @updatedAt
}

// ============ PEER REVIEW & LABS ============
model LabSubmission {
  id             String    @id @default(cuid())
  student        User      @relation("LabSubmissions", fields: [studentId], references: [id])
  studentId      String
  course         Course    @relation(fields: [courseId], references: [id])
  courseId       String
  labNumber      Int
  submissionCode String    
  language       String    
  submittedAt    DateTime  @default(now())
  reviewed       Boolean   @default(false)
  peerReviews    PeerReview[]
  isPublic       Boolean   @default(false) 
}

model PeerReview {
  id           String        @id @default(cuid())
  submission   LabSubmission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  submissionId String
  reviewer     User          @relation(fields: [reviewerId], references: [id])
  reviewerId   String
  feedback     String        
  rating       Int           
  createdAt    DateTime      @default(now())
}

// ============ PROJECTS & PORTFOLIO ============
model Project {
  id              String    @id @default(cuid())
  student         User      @relation(fields: [studentId], references: [id])
  studentId       String
  course          Course    @relation(fields: [courseId], references: [id])
  courseId        String
  specialization  SpecializationTrack? @relation(fields: [specializationId], references: [id])
  specializationId String?
  title           String
  description     String    
  githubUrl       String?
  liveUrl         String?
  technologies    String?   
  semester        Int
  year            Int
  isPublished     Boolean   @default(false)
  createdAt       DateTime  @default(now())
}

// ============ ADDITIONAL FEATURES ============
model StudyGroup {
  id          String      @id @default(cuid())
  name        String
  description String?     
  course      Course      @relation(fields: [courseId], references: [id])
  courseId    String
  creator     User        @relation("GroupCreator", fields: [creatorId], references: [id])
  creatorId   String
  members     User[]      @relation("GroupMembers")
  isPrivate   Boolean     @default(false)
  sharedNotes SharedNote[]
  createdAt   DateTime    @default(now())
}

model SharedNote {
  id        String     @id @default(cuid())
  group     StudyGroup @relation(fields: [groupId], references: [id], onDelete: Cascade)
  groupId   String
  author    User       @relation(fields: [authorId], references: [id])
  authorId  String
  title     String
  content   String     
  tags      String?    
  createdAt DateTime   @default(now())
}

model AchievementBadge {
  id          String   @id @default(cuid())
  name        String   @unique
  description String
  icon        String
  requirement String   
  awardedTo   User[]   @relation("AchievementBadges")
}

model UserAnalytics {
  id            String    @id @default(cuid())
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId        String    @unique
  totalResourcesAccessed Int @default(0)
  totalTimeSpent Int      @default(0) // in minutes
  favoriteResourceType String?
  mostVisitedCourses String? // Comma separated IDs
  lastActivityAt DateTime @default(now())
  updatedAt     DateTime  @updatedAt
}

// ============ LEGACY / CMS MODELS ============

model SiteSettings {
  id          String   @id @default(cuid())
  key         String   @unique 
  value       String   
  type        String   @default("text") 
  category    String   
  description String?  
  updatedAt   DateTime @updatedAt
  updatedBy   String?  
}

model Feature {
  id          String   @id @default(cuid())
  title       String
  description String
  icon        String   
  link        String?  
  coverImage  String?  
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Announcement {
  id          String    @id @default(cuid())
  title       String
  content     String
  type        String    @default("info")
  isActive    Boolean   @default(true)
  startDate   DateTime?
  endDate     DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model ExternalResource {
  id          String   @id @default(cuid())
  name        String
  url         String
  description String
  category    String   
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PageComment {
  id        String   @id @default(cuid())
  pageUrl   String   
  userId    String
  userName  String   
  userEmail String   
  comment   String
  isApproved Boolean @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model VerificationToken {
  id         String   @id @default(cuid())
  email      String
  token      String   @unique
  expires    DateTime
  createdAt  DateTime @default(now())
  
  @@index([email])
  @@index([token])
}

model UserActivity {
  id         String   @id @default(cuid())
  userId     String
  action     String   
  resourceId String?
  details    String?  
  createdAt  DateTime @default(now())
  
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  resource   Resource? @relation(fields: [resourceId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([createdAt])
}

model ReadingProgress {
  id              String   @id @default(cuid())
  userId          String
  resourceId      String
  currentPage     Int      @default(1)
  totalPages      Int?
  percentComplete Float    @default(0)
  lastReadAt      DateTime @default(now())
  
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  resource   Resource @relation(fields: [resourceId], references: [id], onDelete: Cascade)

  @@unique([userId, resourceId])
  @@index([userId])
  @@index([lastReadAt])
}

// Restored CMS Models
model Semester {
  id          String   @id @default(cuid())
  name        String   
  value       String   @unique 
  description String?
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Category {
  id          String   @id @default(cuid())
  name        String   @unique 
  description String?
  icon        String   @default("BookOpenIcon") 
  color       String   @default("bg-blue-100 text-blue-800 border-blue-200") 
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Department {
  id        String   @id @default(cuid())
  name      String   @unique 
  code      String?  
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Format {
  id        String   @id @default(cuid())
  name      String   @unique 
  extension String   
  mimeType  String?  
  order     Int      @default(0)
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
